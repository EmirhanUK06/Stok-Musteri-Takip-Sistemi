@model ProjectOOP.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h1>Profil bilgileri</h1>

<form method="post">
    @Html.Label("Adınız")
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    @Html.Label("Soyadınız")
    <input type="text" asp-for="SurName" class="form-control" />
    <br />
    @Html.Label("Mail Adresiniz")
    <input type="text" asp-for="Email" class="form-control" />
    <br />
    @Html.Label("Cinsiyet")
    <select name="Gender" id="gender" asp-for="Gender">
        <option value="erkek">Erkek</option>
        <option value="kadın">Kadın</option>
    </select>
    <br />
    <br />
    @Html.Label("Şifre")
    <input type="password" asp-for="Password" class="form-control" />
    <br />
    @Html.Label("Şifre Tekrar")
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />
    <button class="btn btn-warning">Değişiklikleri kaydet</button>
</form>

